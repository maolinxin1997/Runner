<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bch.entity.Information" table="information" schema="runner">
        <id name="uId">
            <column name="uId" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="schoolNumber">
            <column name="schoolNumber" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="major">
            <column name="major" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="clazz">
            <column name="class" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="grade">
            <column name="grade" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="college">
            <column name="college" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="school">
            <column name="school" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="positiveImage">
            <column name="positiveImage" sql-type="varchar(256)" length="256" not-null="true"/>
        </property>
        <property name="oppositeImage">
            <column name="oppositeImage" sql-type="varchar(256)" length="256" not-null="true"/>
        </property>
        <property name="aBalance">
            <column name="aBalance" sql-type="decimal(10)" precision="10" not-null="true"/>
        </property>
        <property name="bankNumber">
            <column name="bankNumber" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="deposit">
            <column name="deposit" sql-type="decimal(10)" precision="10" not-null="true"/>
        </property>
        <property name="creditScore">
            <column name="creditScore" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="paymentPassword">
            <column name="paymentPassword" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>