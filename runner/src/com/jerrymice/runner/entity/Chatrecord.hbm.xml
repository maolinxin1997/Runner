<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bch.entity.Chatrecord" table="chatrecord" schema="runner">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="times">
            <column name="times" sql-type="datetime"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="uId">
            <column name="uId" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="talkerId">
            <column name="talkerId" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>