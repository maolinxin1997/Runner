<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bch.entity.Notices" table="notices" schema="runner">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="times">
            <column name="times" sql-type="datetime"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(256)" length="256"/>
        </property>
        <property name="type">
            <column name="type" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>