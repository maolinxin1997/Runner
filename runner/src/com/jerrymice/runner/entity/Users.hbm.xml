<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bch.entity.Users" table="users" schema="runner">
        <id name="id">
            <column name="id" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="nickname">
            <column name="nickname" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="headPortrait">
            <column name="headPortrait" sql-type="varchar(256)" length="256"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="qq">
            <column name="QQ" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="weChat">
            <column name="weChat" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>